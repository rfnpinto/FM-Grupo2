@model IEnumerable<FM_Grupo2.Models.Temporada>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Campeonato.Nome)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Nome)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Ano)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Descricao)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.NJornadas)
        </th>
        <th>
            Equipas
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Campeonato.Nome)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Nome)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Ano)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Descricao)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.NJornadas)
        </td>
        <td>
            @{
                foreach (var equipa in item.Equipas)
                {
                     @equipa.NomeEquipa <br />
                }
            }
        </td>

        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.TemporadaID }) |
            @Html.ActionLink("Details", "Details", new { id=item.TemporadaID }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.TemporadaID })
        </td>
    </tr>
}

</table>
